{
  "manifest_version": 3,
  "name": "Image Hover Save (JXL Experimental)",
  "version": "1.0.1",
  "description": "Hover over images to quickly save them to your downloads folder.",
  "permissions": [
    "downloads",
    "storage",
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; img-src 'self' data: blob: *; connect-src 'self' data: blob: *;"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["jxl-converter.js", "content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Image Hover Save Settings"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["jxl.bundle.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
